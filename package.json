{
  "name": "silverscreen",
  "version": "2.0.0",
  "description": "Capture responsive website screenshots and compare them side by side",
  "type": "module",
  "bin": {
    "silverscreen": "./bin/silverscreen.js"
  },
  "scripts": {
    "dev": "concurrently \"node src/server/index.js\" \"vite\"",
    "build": "tsc -b && vite build",
    "start": "node src/server/index.js",
    "capture": "node bin/silverscreen.js capture",
    "lint": "eslint ."
  },
  "keywords": ["screenshot", "responsive", "cli", "playwright", "comparison"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.0.0",
    "concurrently": "^9.1.2",
    "express": "^4.21.2",
    "playwright": "^1.48.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@tailwindcss/vite": "^4.1.14",
    "@types/express": "^5.0.3",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "tailwindcss": "^4.1.14",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7"
  }
}
